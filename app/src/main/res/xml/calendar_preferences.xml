<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/cz_dvratil_fbeventsync_attending_calendar">
        <SwitchPreference
            android:key="pref_attending_enabled"
            android:title="@string/pref_enabled"
            android:defaultValue="true" />
        <MultiSelectListPreference
            android:key="pref_attending_reminders"
            android:title="@string/pref_reminders"
            android:entries="@array/pref_reminder_entries"
            android:entryValues="@array/pref_reminder_values"
            android:defaultValue="@array/pref_reminder_default" />
        <com.kizitonwose.colorpreference.ColorPreference
            android:key="pref_attending_color"
            android:title="@string/pref_color"
            android:defaultValue="@string/pref_color_default"
            app:showDialog="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/cz_dvratil_fbeventsync_tentative_calendar">
        <SwitchPreference
            android:key="pref_tentative_enabled"
            android:title="@string/pref_enabled"
