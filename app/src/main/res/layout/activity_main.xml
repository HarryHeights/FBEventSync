<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.dvratil.fbeventsync.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbar">

        <Button
            android:id="@+id/add_account_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_account_btn"
            android:onClick="onAddAccountClicked"
            />

        <Button
            android:id="@+id/account_details_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/configure_account_btn"
            android:onClick="onConfigureAccountClicked"
            />

        <Button
            android:id="@+id/show_logs_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_logs_btn"
            android:onClick="onShowLogsClicked"
            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
